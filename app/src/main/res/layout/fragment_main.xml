<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    tools:context=".ui.main.PlaceholderFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_margin_start"
        android:layout_marginEnd="@dimen/view_margin_end"
        android:layout_marginTop="@dimen/view_margin_top"
        android:weightSum="5"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/jack"
            android:scaleType="centerCrop"
            android:id="@+id/imageView_profilePic"
            android:layout_width="60dp"
            android:layout_height="60dp"/>


    <LinearLayout
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/view_margin_start">

    <TextView
        android:id="@+id/textView_contactName"
        android:text="Pankaj"
        android:textSize="@dimen/contact_fontSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/textView_newMessage"
            android:textSize="@dimen/new_message_fontSize"
            android:text="Kaalai vankam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>